// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://main:password@localhost:5432/pixelbypixel"
}

model Canvas {
  id           String    @id
  content      String
  users        User[] @relation(name: "users")
  turn         User   @relation(name: "current", fields: [turnUsername], references: [username])
  turnUsername String
}

model User {
  username            String   @id
  password            String
  canvases            Canvas[] @relation(name: "users")
  canvasesCurrentTurn Canvas[] @relation(name: "current")
  tokens              Token[]
}

model Token {
  id           String @id
  user         User   @relation(fields: [userUsername], references: [username])
  userUsername String
}
